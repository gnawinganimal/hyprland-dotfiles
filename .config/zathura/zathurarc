#zoom
set zoom-step 5
map <C-n> zoom out
map <C-m> zoom in

#clipboard
set selection-clipboard clipboard

set incremental-search "true"

set font "Fira Code NF"

set adjust-open "width"

set window-title-basename "true"

set statusbar-basename "true"

set guioptions none

# colors

set default-bg "#303446"
set default-fg "#CAD3F5"
set recolor-darkcolor "#CAD3F5"
set recolor-lightcolor "#303446"
set highlight-color "#ED8796"
set highlight-active-color "#ED8796"
set inputbar-bg "#22242b"
set inputbar-fg "#cecfdf"

set recolor true
map i recolor
map <C-Space> toggle_statusbar